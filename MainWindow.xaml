<Window x:Class="VisualGuhCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualGuhCode"
        mc:Ignorable="d"
        ResizeMode="CanResizeWithGrip"
        Title="VGC" Height="450" Width="800" AllowsTransparency="True" Background="#FF151515" WindowStyle="None" KeyDown="Window_KeyDown" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.Resources>
        <local:FileTypeToIconConverter x:Key="FileTypeToIconConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="215*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="NavBar" VerticalAlignment="Top" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal" Margin="695,0,0,0">
                <Button Background="#28282B" x:Name="btnMaximize" Content="🗕" Width="30" Margin="0, 0, 5, 0" BorderBrush="Transparent" Foreground="Red" Height="25" Click="Minimize_MouseLeftButtonDown"></Button>
                <Button Background="#28282B" x:Name="btnMinimize" Content="🗖" Width="30" Margin="0, 0, 5, 0" BorderBrush="Transparent" Foreground="Red" Height="25" Click="Maximize_MouseLeftButtonDown"></Button>
                <Button Background="#28282B" x:Name="btnClose" Content="⨉" Width="30" Margin="0, 0, 5, 0" Foreground="Red" Height="25" BorderBrush="Transparent" Click="Close_MouseLeftButtonDown"></Button>
            </StackPanel>
        </Grid>
        <Grid x:Name="TreeViewFolderThingy" Margin="0,29,593,0" Width="207" HorizontalAlignment="Left" Grid.RowSpan="2">
            <TreeView x:Name="FolderTree" Foreground="White" Background="#28282B" RenderTransformOrigin="0.5,0.5" MouseDoubleClick="FolderTree_MouseDoubleClick" TreeViewItem.Expanded="FolderTree_Expanded" Grid.Row="1">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type local:FileSystemItem}" ItemsSource="{Binding SubItems}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="16" Height="16" Source="{Binding Converter={StaticResource FileTypeToIconConverter}}"/>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
                <TreeView.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0" AngleX="0"/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform Y="0" X="0"/>
                    </TransformGroup>
                </TreeView.RenderTransform>
            </TreeView>
        </Grid>
        <Grid x:Name="RTBStretchFix" Opacity="1" Margin="210,29,0,0" Grid.RowSpan="2">
            <RichTextBox x:Name="CodeBox"
                     Background="#28282B"
                     Opacity="0.5"
                     Foreground="White"
                     TextChanged="CodeBox_TextChanged"
                     HorizontalAlignment="Center"/>
        </Grid>
        <Grid x:Name="CommandPalette" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Opacity="0" Height="59" Width="506" Grid.Row="1">
            <Rectangle x:Name="CmdPltBkg" HorizontalAlignment="Center" Height="59" VerticalAlignment="Top" Width="506" Fill="#FF444444" RadiusX="5" RadiusY="5"/>
            <TextBlock x:Name="CmdPltName" HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Text="Command Palette" Width="498" Foreground="White" VerticalAlignment="Top" TextAlignment="Center"/>
            <TextBox x:Name="CmdPlt" HorizontalAlignment="Center" Margin="0,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="496" Height="29" Background="#FF1F1F1F" BorderBrush="{x:Null}" Foreground="White" Panel.ZIndex="1" TextChanged="CmdPlt_TextChanged" KeyDown="CmdPlt_KeyDown"/>
        </Grid>
    </Grid>
</Window>
